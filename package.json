{
  "name": "node-mailer",
  "version": "1.0.4",
  "description": "Service to send emails",
  "private": true,
  "main": "index.js",
  "author": {
    "name": "Giammarco Boscaro",
    "email": "giammarco.boscaro@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GiamBoscaro/mail-server.git"
  },
  "bugs": {
    "url": "https://github.com/GiamBoscaro/mail-server/issues"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon esm index.js --signal SIGTERM",
    "dev:docker": "NODE_ENV=development nodemon -L esm index.js --signal SIGTERM",
    "start": "NODE_ENV=production node index.js",
    "start:stage": "NODE_ENV=staging node index.js",
    "jest": "jest",
    "test": "jest --testPathIgnorePatterns 'e2e/'",
    "test:ci": "jest --coverage --ci --testPathIgnorePatterns 'e2e/'",
    "test:e2e": "jest --ci -i e2e",
    "lint": "eslint *.js",
    "lint:fix": "eslint --fix .",
    "presemantic-release": "npm run lint",
    "semantic-release": "semantic-release --no-ci",
    "semantic-release:test": "semantic-release --no-ci --dry-run",
    "semantic-release:ci": "semantic-release"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "camelcase": "^6.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-openapi-validator": "~4.9.5",
    "handlebars": "^4.7.8",
    "http-errors": "^1.8.1",
    "is-html": "^2.0.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "ono": "^7.1.3",
    "swagger-ui-express": "^4.6.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "axios": "^0.27.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "esm": "~3.2.25",
    "jest": "^27.2.4",
    "jest-junit": "^16.0.0",
    "kill-port": "^1.6.1",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.22",
    "semantic-release": "^19.0.3",
    "z-schema": "^4.2.4"
  },
  "config": {
    "port": "3000",
    "allow-same-version": false,
    "commit-hooks": true,
    "git-tag-version": true
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    }
  },
  "keywords": [
    "openapi",
    "api",
    "backend",
    "mailer",
    "mail",
    "node"
  ]
}
