{
  "name": "node-mailer-microservice",
  "version": "1.0.4",
  "description": "This is the Api documentation for the Nodemailer microservice. [Repository GitLab](https://git.im-tech.it/im-tech/mail-server) ",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "ENV=PROD node index.js",
    "dev": "ENV=DEV nodemon -r esm index.js --signal SIGTERM",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "nohup npm run start > /dev/null & npm run test:coverage",
    "lint": "eslint *.js",
    "preversion": "npm run lint",
    "version": "git add -A .",
    "postversion": "git push && git push --tags"
  },
  "config": {
    "port": "3000",
    "allow-same-version": false,
    "commit-hooks": true,
    "git-tag-version": true
  },
  "keywords": [
    "openapi",
    "api",
    "backend",
    "mailer",
    "mail",
    "node"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "camelcase": "^5.3.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^3.9.1",
    "handlebars": "^4.7.7",
    "i": "^0.3.7",
    "is-html": "~2.0.0",
    "js-yaml": "^3.3.0",
    "nodemailer": "^6.6.3",
    "npm": "^8.0.0",
    "ono": "^5.0.1",
    "openapi-sampler": "^1.0.0-beta.15",
    "swagger-ui-express": "^4.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "axios": "^0.21.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.17.2",
    "esm": "~3.2.25",
    "jest": "^27.2.4",
    "mocha": "^7.1.1",
    "nodemon": "~2.0.7",
    "z-schema": "^4.2.4"
  },
  "eslintConfig": {
    "env": {
      "node": true
    }
  }
}
